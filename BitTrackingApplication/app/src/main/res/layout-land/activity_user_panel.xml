<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ba.bitcamp.bittracking.bittrackingapplication.controllers.UserPanelActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:src="@drawable/logo">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">
    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearLayout3"
        android:layout_toRightOf="@+id/new_request_button"
        android:layout_toEndOf="@+id/new_request_button"
        android:layout_alignBottom="@+id/my_packages_button">

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:textSize="15dp"
                android:id="@+id/textView4"
                android:padding="5dp"
                android:textColor="#606060"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#606060"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="#606060"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="#cccccc"
                android:id="@+id/user_name"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="#606060"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Surname"
                android:textColorHint="#cccccc"
                android:id="@+id/user_surname"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="#606060"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#cccccc"
                android:id="@+id/user_email"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="#606060"
                android:textStyle="italic"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/my_packages"
        android:drawableLeft="@drawable/mypackage"
        android:id="@+id/my_packages_button"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_below="@+id/user_tracking"
        android:layout_alignLeft="@+id/user_tracking"
        android:layout_alignStart="@+id/user_tracking"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Track package"
        android:drawableLeft="@drawable/tracking"
        android:padding="5dp"
        android:textSize="8sp"
        android:textStyle="bold"
        android:id="@+id/user_tracking"
        android:layout_below="@+id/new_request_button"
        android:layout_alignLeft="@+id/new_request_button"
        android:layout_alignStart="@+id/new_request_button"/>
    <Button
        android:id="@+id/new_request_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/addrequest"
        android:text="@string/add_request"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:textColor="#0A2B73"
        android:textStyle="bold"
        android:id="@+id/textView3"/>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/location"
            android:id="@+id/location_user"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sign_out_button"
            android:layout_toEndOf="@+id/sign_out_button"
            android:text="location"
            android:textSize="8dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/tracking"
            android:id="@+id/info_user"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="track"
            android:textSize="8dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/sign_out"
            android:id="@+id/sign_out_button"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/facebook_button_user"
            android:layout_toEndOf="@+id/facebook_button_user"
            android:text="sign out"
            android:textSize="8dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/facebook"
            android:id="@+id/facebook_button_user"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/info_user"
            android:layout_toEndOf="@+id/info_user"
            android:text="facebook"
            android:textSize="8dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:drawableTop="@drawable/twitter"
            android:id="@+id/twitter_button_user"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/location_user"
            android:layout_toEndOf="@+id/location_user"
            android:text="twitter"
            android:textSize="8dp"
            android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>