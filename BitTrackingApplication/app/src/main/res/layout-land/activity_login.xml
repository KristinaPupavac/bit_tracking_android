<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:padding="10dp"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:src="@drawable/logo">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/welcome"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textColor="#4682b4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fillfrom"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textAlignment="center"
            android:textColor="#4682b4"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="285dp"
            android:layout_height="30dp"
            android:id="@+id/email"
            android:textAlignment="center"
            style="@style/edittext_style"
            android:drawableLeft="@drawable/email"
            android:hint="Email"
            android:textColorHint="#cccccc"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="285dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:layout_marginTop="-2dp"
            style="@style/edittext_style"
            android:hint="Password"
            android:textColorHint="#cccccc"
            android:password="true"
            android:drawableLeft="@drawable/password"
            android:textAlignment="center"/>
        <requestFocus />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/loginbtn"
            android:textAlignment="center"
            android:text="Sign in"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/register"
            android:textAlignment="center"
            android:text="Sign up"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:id="@+id/facebook_button"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/twitter_button"
            android:layout_toStartOf="@+id/twitter_button"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/page"
            android:layout_toStartOf="@+id/page"
            android:id="@+id/twitter_button"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/page"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/location"
            android:id="@+id/location"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/info"
            android:layout_toStartOf="@+id/info"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tracking"
            android:id="@+id/info"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/facebook_button"
            android:layout_toStartOf="@+id/facebook_button"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"/>

    </RelativeLayout>


</RelativeLayout>