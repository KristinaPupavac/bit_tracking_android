<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="Package id"
            android:id="@+id/package_id"
            android:gravity="center"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Package approved/rejected"
            android:id="@+id/package_approved_rejected"
            android:gravity="center"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="Package status"
            android:id="@+id/package_status"
            android:gravity="center"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/package_icon"
            android:text="info"
            android:textSize="10sp"
            android:id="@+id/info_package"
            />

    </LinearLayout>

</LinearLayout>